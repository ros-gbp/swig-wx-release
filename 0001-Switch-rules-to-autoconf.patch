From 8cbdefaac51104b8a03dc36c364432af4bf2ccf5 Mon Sep 17 00:00:00 2001
From: William Woodall <wjwwood@gmail.com>
Date: Sun, 11 Nov 2012 21:22:18 -0800
Subject: [PATCH] Switch rules to autoconf

---
 debian/rules |   70 +++++++++++++++-------------------------------------------
 1 file changed, 18 insertions(+), 52 deletions(-)
 rewrite debian/rules (94%)
 mode change 100755 => 100644

diff --git a/debian/rules b/debian/rules
old mode 100755
new mode 100644
dissimilarity index 94%
index 9716ec7..408c0ed
--- a/debian/rules
+++ b/debian/rules
@@ -1,52 +1,18 @@
-#!/usr/bin/make -f
-# -*- makefile -*-
-# Sample debian/rules that uses debhelper.
-# This file was originally written by Joey Hess and Craig Small.
-# As a special exception, when this file is copied by dh-make into a
-# dh-make output file, you may use that output file without restriction.
-# This special exception was added by Craig Small in version 0.37 of dh-make.
-
-# Uncomment this to turn on verbose mode.
-export DH_VERBOSE=1
-export DH_OPTIONS=-v --buildsystem=cmake
-# TODO: remove the LDFLAGS override.  It's here to avoid esoteric problems
-# of this sort:
-#  https://code.ros.org/trac/ros/ticket/2977
-#  https://code.ros.org/trac/ros/ticket/3842
-export LDFLAGS=
-export PKG_CONFIG_PATH=/usr/local/lib/pkgconfig
-
-%:
-	dh  $@
-
-override_dh_auto_configure:
-	# In case we're installing to a non-standard location, look for a setup.sh
-	# in the install tree that was dropped by catkin, and source it.  It will
-	# set things like CMAKE_PREFIX_PATH, PKG_CONFIG_PATH, and PYTHONPATH.
-	if [ -f "/usr/local/setup.sh" ]; then . "/usr/local/setup.sh"; fi && \
-	dh_auto_configure -- \
-		-DCATKIN_BUILD_BINARY_PACKAGE="1" \
-		-DCMAKE_INSTALL_PREFIX="/usr/local" \
-		-DCMAKE_PREFIX_PATH="/usr/local"
-
-override_dh_auto_build:
-	# In case we're installing to a non-standard location, look for a setup.sh
-	# in the install tree that was dropped by catkin, and source it.  It will
-	# set things like CMAKE_PREFIX_PATH, PKG_CONFIG_PATH, and PYTHONPATH.
-	if [ -f "/usr/local/setup.sh" ]; then . "/usr/local/setup.sh"; fi && \
-	dh_auto_build
-
-override_dh_auto_test:
-	# In case we're installing to a non-standard location, look for a setup.sh
-	# in the install tree that was dropped by catkin, and source it.  It will
-	# set things like CMAKE_PREFIX_PATH, PKG_CONFIG_PATH, and PYTHONPATH.
-	echo -- Running tests. Even if one of them fails the build is not canceled.
-	if [ -f "/usr/local/setup.sh" ]; then . "/usr/local/setup.sh"; fi && \
-	dh_auto_test || true
-
-override_dh_shlibdeps:
-	# In case we're installing to a non-standard location, look for a setup.sh
-	# in the install tree that was dropped by catkin, and source it.  It will
-	# set things like CMAKE_PREFIX_PATH, PKG_CONFIG_PATH, and PYTHONPATH.
-	if [ -f "/usr/local/setup.sh" ]; then . "/usr/local/setup.sh"; fi && \
-	dh_shlibdeps -l$(CURDIR)/debian/swig-wx//usr/local/lib/
+#! /usr/bin/make -f
+# Uncomment this to turn on verbose mode.
+export DH_VERBOSE=1
+export DH_OPTIONS=-v
+
+%:
+    dh  $@
+
+override_dh_auto_configure:
+    dh_auto_configure -- \
+        --prefix="/opt/ros/groovy"
+
+override_dh_auto_test:
+    echo -- Running tests. Even if one of them fails the build is not canceled.
+    dh_auto_test || true
+
+override_dh_installdocs:
+    dh_installdoc || true
-- 
